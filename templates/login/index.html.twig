{% extends 'base.html.twig' %}

{# ... #}

{% block title %}Login!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('login', null ,'loginConfig') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('login', null ,'loginConfig') }}
{% endblock %}



{% block main %}

<div class="jumbotron d-flex align-items-center" style="height: 90%" >
    <div class="container-fluid text-center">
        <div class="row justify-content-md-center">
            <div class="col-sm-3 col-md-4 col-lg-4"></div>
            <div class="col-sm-6 col-md-4 col-lg-4" style="height: 300px">

                <div class="h-100">
                    <div class="d-flex justify-content-center">
                        <form action="{{ path('app_login') }}" method="post" class="">
                            <div class="card border-success text-center p-2 card-login">
                                <div class="card-header border-0 text-dark">
                                    <img id="logo" src="{{ asset('Images/logo_login.svg') }}" alt=""/>
                                </div>
                                <div class="card-body text-dark pb-0">
                                    <h5 class="card-title"> Temp Shell</h5>
                                    {% if error %}
                                        <h7>
                                            {{ error.messageKey|trans(error.messageData, 'security') }}
                                        </h7>
                                    {% endif %}
                                    <p class="card-text mt-1">
                                    <div class="row g-3 align-items-center mb-1">
                                        <div class="col-auto">
                                            <label for="text" class="col-form-label">
                                                <i class="bi bi-person-fill log-icon"></i>
                                            </label>
                                        </div>
                                        <div class="col-auto">
                                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required>
                                        </div>
                                    </div>

                                    <div class="row g-3 align-items-center">
                                        <div class="col-auto">
                                            <label for="password" class="col-form-label">
                                                <i class="bi bi-lock-fill log-icon"></i>
                                            </label>
                                        </div>
                                        <div class="col-auto">
                                            <input type="password" class="form-control" id="password" name="_password" aria-describedby="passwordHelpInline" required>
                                        </div>
                                    </div>

                                    {# If you want to control the URL the user is redirected to on success #}
                                    <input type="hidden" name="_target_path" value="{{ path('app_index') }}"/>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                </div>
                                <div class="card-footer text-dark d-grid border-0">
                                    <button class="btn btn-success btn-block" type="submit">Accedi</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 col-md-4 col-lg-4"></div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}

        <div style="height: 10%;" >
            <hr class="border-2 border-top border-success mt-0 mb-0" style="background-color: aquamarine">
            <div style="">
            </div>
        </div>

{% endblock %}







